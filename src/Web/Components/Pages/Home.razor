        border-bottom: 1px solid #dee2e6;
        font-weight: 600;
    }
</style>

@code {
    private IBrowserFile? _selectedFile;
    private string _uploadedFileName = string.Empty;
    private bool _isProcessing;
    private string _errorMessage = string.Empty;
    private bool _hasResults;
    
    private string _httpClientText = string.Empty;
    private string _pdfPigText = string.Empty;
    private int _httpClientTextLength;
    private int _pdfPigTextLength;
    private bool _textsMatch;
    
    private List<DiffLine> _diffLines = new();

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        _selectedFile = e.File;
        _uploadedFileName = e.File.Name;
        _hasResults = false;
        _errorMessage = string.Empty;
        _httpClientText = string.Empty;
        _pdfPigText = string.Empty;
        _diffLines.Clear();
        StateHasChanged();
    }

    private async Task CompareExtraction()
    {
        if (_selectedFile == null)
        {
            _errorMessage = "Please select a file first";
            return;
        }

        _isProcessing = true;
        _errorMessage = string.Empty;
        _hasResults = false;
        _httpClientText = string.Empty;
        _pdfPigText = string.Empty;
        _diffLines.Clear();

        try
        {
            // Read the file stream
            await using var fileStream = _selectedFile.OpenReadStream(maxAllowedSize: 100 * 1024 * 1024); // 100MB max
            
            // Create memory streams for both services (they may consume the stream)
            var httpClientStream = new MemoryStream();
            var pdfPigStream = new MemoryStream();
            
            await fileStream.CopyToAsync(httpClientStream);
            httpClientStream.Position = 0;
            await httpClientStream.CopyToAsync(pdfPigStream);

            Console.WriteLine($"position: {httpClientStream.Position}");
            
            httpClientStream.Position = 0;
            pdfPigStream.Position = 0;

            Console.WriteLine($"position: {httpClientStream.Position}");
            // Extract text from both services in parallel
            var httpClientTask = PdfReaderService.ExtractText(httpClientStream, _selectedFile.Name);
            var pdfPigTask = PdfPigService.ExtractText(pdfPigStream, _selectedFile.Name);

            await Task.WhenAll(httpClientTask, pdfPigTask);

            _httpClientText = await httpClientTask;
            _pdfPigText = await pdfPigTask;

            _httpClientTextLength = _httpClientText.Length;
            _pdfPigTextLength = _pdfPigText.Length;
            
            // Compare texts ignoring whitespace differences
            var normalized1 = NormalizeTextForComparison(_httpClientText);
            var normalized2 = NormalizeTextForComparison(_pdfPigText);
            _textsMatch = normalized1 == normalized2;

            // Generate diff if texts don't match (ignoring whitespace)
            if (!_textsMatch)
            {
                _diffLines = GenerateDiff(_httpClientText, _pdfPigText);
            }

            _hasResults = true;
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error processing PDF: {ex}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }

    private List<DiffLine> GenerateDiff(string text1, string text2)
    {
        var lines1 = text1.Split('\n');
        var lines2 = text2.Split('\n');
        
        // Normalize lines for comparison (ignore whitespace differences)
        var normalized1 = lines1.Select(NormalizeWhitespace).ToArray();
        var normalized2 = lines2.Select(NormalizeWhitespace).ToArray();
        
        var diff = new List<DiffLine>();
        
        // Simple line-by-line diff using longest common subsequence approach
        int i = 0, j = 0;
        while (i < lines1.Length || j < lines2.Length)
        {
            if (i < lines1.Length && j < lines2.Length && normalized1[i] == normalized2[j])
            {
                // Lines match (ignoring whitespace)
                diff.Add(new DiffLine { Type = "context", Marker = " ", Content = lines1[i] });
                i++;
                j++;
            }
            else if (j < lines2.Length && (i >= lines1.Length || !normalized1.Skip(i).Contains(normalized2[j])))
            {
                // Line added in text2
                diff.Add(new DiffLine { Type = "added", Marker = "+", Content = lines2[j] });
                j++;
            }
            else if (i < lines1.Length && (j >= lines2.Length || !normalized2.Skip(j).Contains(normalized1[i])))
            {
                // Line removed from text1
                diff.Add(new DiffLine { Type = "removed", Marker = "-", Content = lines1[i] });
                i++;
            }
            else
            {
                // Try to find matching line ahead
                bool found = false;
                for (int k = j + 1; k < lines2.Length && k < j + 10; k++)
                {
                    if (i < lines1.Length && normalized1[i] == normalized2[k])
                    {
                        // Found match ahead, mark intermediate lines as added
                        while (j < k)
                        {
                            diff.Add(new DiffLine { Type = "added", Marker = "+", Content = lines2[j] });
                            j++;
                        }
                        found = true;
                        break;
                    }
                }
                
                if (!found)
                {
                    // No match found, mark as removed
                    if (i < lines1.Length)
                    {
                        diff.Add(new DiffLine { Type = "removed", Marker = "-", Content = lines1[i] });
                        i++;
                    }
                    else if (j < lines2.Length)
                    {
                        diff.Add(new DiffLine { Type = "added", Marker = "+", Content = lines2[j] });
                        j++;
                    }
                }
            }
        }
        
        return diff;
    }

    private string NormalizeWhitespace(string line)
    {
        // Normalize a single line: trim and collapse multiple whitespace characters to single spaces
        return System.Text.RegularExpressions.Regex.Replace(line.Trim(), @"\s+", " ");
    }

    private string NormalizeTextForComparison(string text)
    {
        // Normalize entire text: collapse multiple whitespace to single spaces, normalize line breaks
        var normalized = System.Text.RegularExpressions.Regex.Replace(text, @"\r\n|\r|\n", "\n"); // Normalize line breaks
        normalized = System.Text.RegularExpressions.Regex.Replace(normalized, @"[ \t]+", " "); // Collapse horizontal whitespace
        normalized = System.Text.RegularExpressions.Regex.Replace(normalized, @"\n{3,}", "\n\n"); // Collapse multiple newlines to double newline max
        return normalized.Trim();
    }

    private class DiffLine
    {
        public string Type { get; set; } = string.Empty; // "added", "removed", "context"
        public string Marker { get; set; } = string.Empty; // "+", "-", " "
        public string Content { get; set; } = string.Empty;
    }
}

